@inherits CanvasBase

@page "/canvas"

<h1>Canvas</h1>

<div class="container-fluid">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <BECanvas Width="@CanvasWidth" Height="@CanvasHeight" @ref="_canvasReference"></BECanvas>
        </div>
        <div class="col-2"></div>
    </div>
    <div class="row">
        <div class="col">
            <p>Points: @PointsStr</p>
            <p>Canvas Points: @ConvertedPointsStr</p>
        </div>
    </div>
</div>
